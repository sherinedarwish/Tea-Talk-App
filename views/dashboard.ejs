<body style="background-color: #edd3bc; background-repeat: no-repeat" >
  <div class="card text-center">
    <div class="card-header">
      Spill Some Tea
    </div>
    <div class="card-body">
      <h5 class="card-title"></h5>
      <%- include ('./partials/messages') %>

      <form action="/dashboard" method="POST">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Write a post</span>
          </div>
          <textarea 
            class="form-control" 
            aria-label="With textarea"
            type="text"
            id="text"
            name="text"
            class="form-control"
            placeholder="Spill some tea.."
            value="<%= typeof text != 'undefined' ? text : '' %>"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">
          POST
        </button>
      
      </form>
      </div>

      <div>
        <div class="card text-center">
          <div class="card-header">
            Posts
          </div>
          <div class="row mt-5">
            <div class="col-md-6 m-auto">
              
                <% var i=0; %>
                <% data.forEach(function(item){ %>

                  <div class="input-group-prepend">
                    <span class="input-group-text"><%=names[i] %></span>
                  </div>
                  
                  <input 
                  class="form-control"  
                  type="text" 
                  name="telnum" 
                  value="<%=item.text %>" 
                  readonly="readonly" 
                  />
          
                <% i++; }) %>
              
            </div>
          </div>


        </div>
      </div>



    <div class="card-footer text-muted">
      footer
    </div>
  </div>

</body>
