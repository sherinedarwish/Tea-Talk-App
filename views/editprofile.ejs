<body style="background-color: #edd3bc; background-repeat: no-repeat" >
  <%- include ('./partials/messages') %>

    <div class="row">
        <div class="col-sm-6">
          <div class="cardbox card-body text-center">

            <% if(image_exists == 0){ %>
              <img src="images/person1.png" alt="image" style='width:350px; height:250px; float: center;'></a>
              <%} else { %>
                <img src="<%= user.avatar %>"" alt="image" style='width:250px; height:200px; float: center;'></a>

              <% } %>

              <form action= "/upload" method="POST" enctype="multipart/form-data" style="float:right center">
                  <div class="form-group">
                    <input type="file" style=" margin: auto;
                    text-align: center;" class="form-control-file" name="image"> 
                    <button class="btn btn-success my-2 my-sm-0 " type="submit">Change Picture</button>
                  </div>
              </form> 
              <form  action="/deleteAvatar/?_method=DELETE" method="POST" enctype="multipart/form-data" style="float:right center">
                <div class="form-group">
                  <button class="btn btn-danger my-2 my-sm-0 " type="submit">Remove Picture</button>
                </div>
              </form> 

          </div>
        </div>
        <div class="col-sm-6">
          <div class="col-md-6 m-left">
            <div class="cardbox card-body text-center" style="font-size: x-large;"> Edit Profile
                <br>
                <form action="/editusername?_method=PUT" method="POST" >
                  <div class="form-group" style="font-size: large;" >
                      <label for="name">Name</label>
                      <input
                          type="name"
                          id="name"
                          value= "<%= user.name %>"
                          name="name"
                          class="form-control"
                          placeholder= <%= user.name %>
                    
                      />
                      <button type="submit" class="btn btn-primary btn-block">
                        Edit
                      </button>
                  </div>
                </form>
                <form action="/edituseremail?_method=PUT" method="POST" >

                  <div class="form-group" style="font-size: large;">
                      <label for="email">Email</label>
                      <input
                          type="email"
                          id="email"
                          value= "<%= user.email %>"
                          name="email"
                          class="form-control"
                          placeholder= <%= user.email %>
                      />
                      <button type="submit" class="btn btn-primary btn-block">
                        Edit
                    </button>
                  </div>
                </form>
                <form action="/edituserpassword?_method=PUT" method="POST" >
                    <div class="form-group"  style="font-size: large;">
                        <label for="password">Password</label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder=""
                            
                        />
                    </div>
                    <div class="form-group" style="font-size: large;">
                        <label for="password2">Confirm Password</label>
                        <input
                            type="password"
                            id="password2"
                            value= ""
                            name="password2"
                            class="form-control"
                            placeholder=""
                        />
                        <button type="submit" class="btn btn-primary btn-block">
                          Edit Password
                      </button>
                    </div>
                    
                </form>
            </div>
          </div>
        </div>

</body>

