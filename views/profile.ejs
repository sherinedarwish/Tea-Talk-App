<body style="background-color: #edd3bc; background-repeat: no-repeat" >

    <div class="row">
        <div class="col-sm-4 ">
          <div class="cardbox card-body text-center">
            <br>
            <h3 style="color: black;"> Profile Picture</h3>
            <br><br>
            <% if(image_exists == 0){ %>
              <img src="images/person1.png" alt="image" style='width:350px; height:250px; float: center;'></a>
              <%} else { %>
                <img src="<%= user.avatar %>"" alt="image" style='width:250px; height:200px; float: center;'></a>

              <% } %>
          </div>
        </div>
        
        <div class="col-sm-6">
          <div class="col-xl-md-6 m-left"> 
            <div class="card card-body text-center ">
                  <br>
                  <div class="card-header">
                    My Posts
                  </div>
                  

                  <div>
                    <% var i=1; %>
                    <% data.forEach(function(item){ %>
                      <div class="input-group-prepend">
                        <span class="input-group-text"><%= user.name %></span>
                      </div>
    
                      <input 
                      class="form-control"  
                      type="text" 
                      name="telnum" 
                      value="<%=item.text %>" 
                      readonly="readonly" />

                      <div class="buttonss">
                        <div class="action_btn">
                          <form action="/deletepost/<%= item._id %>?_method=DELETE"method="POST">
                          <button
                              type="submit"
                              class="btn btn-danger btn"> X
                          </button>
                          </form>

                          <form action="/editpost/<%= item._id %>" method="GET">
                            <button
                                type="submit"
                                class="btn btn-primary btn" > Edit
                            </button>
                          </form>
                        </div>
                      </div>
            
                    <% i++; }) %>
                  </div>
            </div>
          </div>
        </div>

</body>

