<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">People you may know</h1>

            <body>
                <div class="table-data text-center mb-3">
                    <table >
                        <tr>
                            <th>. </th>
                            <th>Name </th>
                            <th>Email</th>
                            <th>Add</th>
                        </tr>

                        <% var i=1; %>
                        <% data.forEach(function(item){ %>
                        <tr>
                            <td><%=i; %></td>
                            <td><%=item.name %></td>
                            <td><%=item.email %></td>
                            <td>
                              <form
                                    action="/add/<%= item._id %>"
                                    method="POST">
                                    <button
                                        type="submit"
                                        class="btn btn-primary btn-block">
                                        Add Friend
                                    </button>
                                </form>
                                
                            </td>
                            
                        </tr>
                        <% i++; }) %>
                    </table>
                </div>
            </body>

            <p class="lead mt-5">
                Back to Dashboard
                <a class="lead mt-5" href="/dashboard">Click here</a>
            </p>
            <p class="lead mt-1">
                Wanna logout? <a href="/users/logout">Logout</a>
            </p>
        </div>
    </div>
</div>
